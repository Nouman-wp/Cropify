<% layout("/layouts/boilerplate") %>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-container">
                
            </div>
            <h1>Welcome Back</h1>
            <h4>Login to your account</h4>
            <p class="subtitle">Enter your credentials to access your account</p>
        </div>

        <form action="/login" method="POST" id="loginForm" novalidate class="login-form">
            <% if(locals.error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
            <% } %>
            
            <% if (locals.csrfToken) { %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <% } %>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="username">
                        <i class="fas fa-user"></i> Username <span class="required">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username" 
                        placeholder="Enter your username" 
                        autocomplete="username"
                        required
                        minlength="3"
                        aria-describedby="username-error"
                    >
                    <small id="username-error" class="error-message"></small>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="password">
                        <i class="fas fa-lock"></i> Password <span class="required">*</span>
                    </label>
                    <div class="password-input-container">
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            placeholder="Enter your password" 
                            autocomplete="current-password"
                            required
                            minlength="6"
                            aria-describedby="password-error"
                        >
                        <button 
                            type="button" 
                            id="togglePassword" 
                            class="toggle-password"
                            aria-label="Toggle password visibility"
                        >
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <small id="password-error" class="error-message"></small>
                </div>
            </div>

            <div class="form-agreement">
                <div class="checkbox-group">
                    <input type="checkbox" id="remember" name="remember">
                    <label for="remember">Remember me</label>
                </div>
                <div class="forgot-password">
                    <a href="/forgot-password" class="forgot-link">Forgot password?</a>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit" id="submitButton">
                    <i class="fas fa-sign-in-alt"></i> Login
                </button>
            </div>

            <div class="divider">
                <span>or continue with</span>
            </div>

            <div class="social-login">
                <a href="/auth/google" class="social-btn google">
                    <i class="fab fa-google"></i>
                    <span>Google</span>
                </a>
                <a href="/auth/facebook" class="social-btn facebook">
                    <i class="fab fa-facebook-f"></i>
                    <span>Facebook</span>
                </a>
            </div>

            <p class="login-link">Don't have an account? <a href="/signup">Sign up</a> for free</p>
        </form>
    </div>
    
    <div class="features-highlight">
        <div class="feature">
            <i class="fas fa-shield-alt"></i>
            <span>Secure Login</span>
        </div>
        <div class="feature">
            <i class="fas fa-bolt"></i>
            <span>Quick Access</span>
        </div>
        <div class="feature">
            <i class="fas fa-user-shield"></i>
            <span>Privacy Protected</span>
        </div>
    </div>
</div>

<style>
    :root {
        /* Sophisticated Teal Color Palette - Matching your header/footer */
        --primary-teal: #20b2aa;        /* Light Sea Green */
        --secondary-teal: #008080;      /* Teal */
        --dark-teal: #005f73;           /* Deep Teal */
        --accent-green: #2ecc71;        /* Emerald Green */
        --background-light: #f0f4f4;    /* Soft Teal Background */
        --text-primary: #2c3e50;        /* Dark Blue-Gray */
        --text-secondary: #5d7b8a;      /* Slate Gray */
        --white: #ffffff;
        --error: #e74c3c;
        --success: #2ecc71;
        --warning: #f39c12;
        
        /* Form Elements */
        --input-bg: #f9fbfb;
        --input-border: #dbe5e5;
        --input-focus: #20b2aa;
        
        /* Shadows and Effects */
        --card-shadow: 0 10px 25px rgba(0, 128, 128, 0.1);
        --hover-shadow: 0 15px 35px rgba(0, 128, 128, 0.15);
        --btn-shadow: 0 4px 6px rgba(32, 178, 170, 0.2);
        
        /* Transition and Animation */
        --transition-speed: 0.3s;
    }

    body {
        background-color: var(--background-light);
        color: var(--text-primary);
        line-height: 1.6;
        font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
    }

    .login-container {
        width: 100%;
        max-width: 700px; /* Increased from 500px to 700px */
        margin: 40px auto 80px;
        padding: 0 20px;
    }

    .login-card {
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--card-shadow);
        overflow: hidden;
        transition: all var(--transition-speed) ease;
        display: flex;
        flex-direction: column;
    }

    .login-card:hover {
        box-shadow: var(--hover-shadow);
    }

    .login-header {
        background: linear-gradient(135deg, var(--secondary-teal), var(--primary-teal));
        color: var(--white);
        padding: 30px 40px; /* Reduced padding from 40px to 30px vertically */
        text-align: center;
        position: relative;
    }

    .logo-container {
        margin-bottom: 15px; /* Reduced from 20px */
    }

    .logo {
        font-size: 1.75rem;
        font-weight: 800;
        letter-spacing: 1.5px;
        display: inline-block;
        color: var(--white);
        text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
    }

    .login-header h1 {
        font-size: 2.25rem; /* Reduced from 2.5rem */
        margin: 0;
        font-weight: 700;
    }

    .login-header h4 {
        margin: 8px 0 0; /* Reduced top margin from 10px to 8px */
        font-weight: 400;
        opacity: 0.9;
    }

    .subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-top: 8px; /* Reduced from 10px */
    }

    .login-form {
        padding: 30px 40px; /* Reduced vertical padding */
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 10px;
    }

    .form-group {
        flex: 1;
        margin-bottom: 20px; /* Reduced from 25px */
    }

    label {
        display: block;
        margin-bottom: 6px; /* Reduced from 8px */
        font-weight: 600;
        color: var(--text-primary);
    }

    label i {
        margin-right: 8px;
        color: var(--primary-teal);
    }

    input, select {
        width: 100%;
        padding: 12px 16px; /* Reduced from 14px to 12px */
        border: 1px solid var(--input-border);
        border-radius: 10px;
        background-color: var(--input-bg);
        color: var(--text-primary);
        font-size: 1rem;
        transition: all var(--transition-speed) ease;
    }

    input:focus, select:focus {
        border-color: var(--input-focus);
        box-shadow: 0 0 0 3px rgba(32, 178, 170, 0.2);
        outline: none;
    }

    .required {
        color: var(--error);
    }

    small {
        display: block;
        margin-top: 6px;
        color: var(--text-secondary);
        font-size: 0.85rem;
    }

    .error-message {
        color: var(--error);
    }

    /* Password Field */
    .password-input-container {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        color: var(--text-secondary);
        font-size: 1rem;
    }

    .toggle-password:hover {
        color: var(--dark-teal);
    }

    /* Form Agreement */
    .form-agreement {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px; /* Reduced from 25px */
    }

    .checkbox-group {
        display: flex;
        align-items: center;
    }

    .checkbox-group input[type="checkbox"] {
        width: 18px;
        height: 18px;
        margin-right: 10px;
        margin-top: 0;
    }

    .forgot-link {
        color: var(--primary-teal);
        text-decoration: none;
        border-bottom: 1px dotted;
    }

    .forgot-link:hover {
        color: var(--dark-teal);
    }

    /* Form Actions */
    .form-actions {
        margin-top: 15px; /* Reduced from 20px */
        text-align: center;
    }

    .btn-submit {
        background: linear-gradient(to right, var(--secondary-teal), var(--primary-teal));
        color: var(--white);
        border: none;
        padding: 14px 30px; /* Reduced from 16px to 14px */
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        cursor: pointer;
        transition: all var(--transition-speed) ease;
        box-shadow: var(--btn-shadow);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 200px;
    }

    .btn-submit i {
        margin-right: 10px;
    }

    .btn-submit:hover {
        background: linear-gradient(to right, var(--dark-teal), var(--secondary-teal));
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(32, 178, 170, 0.3);
    }

    .btn-submit:active {
        transform: translateY(0);
    }

    /* Social Login */
    .divider {
        text-align: center;
        margin: 25px 0; /* Reduced from 30px */
        position: relative;
    }

    .divider::before, .divider::after {
        content: '';
        position: absolute;
        top: 50%;
        width: 40%;
        height: 1px;
        background-color: var(--input-border);
    }

    .divider::before {
        left: 0;
    }

    .divider::after {
        right: 0;
    }

    .divider span {
        display: inline-block;
        padding: 0 15px;
        background-color: var(--white);
        color: var(--text-secondary);
        position: relative;
        z-index: 1;
    }

    .social-login {
        display: flex;
        gap: 20px;
        margin-bottom: 25px; /* Reduced from 30px */
    }

    .social-btn {
        flex: 1;
        padding: 12px;
        border-radius: 10px;
        border: 1px solid var(--input-border);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
        color: var(--text-primary);
        font-weight: 500;
        transition: all var(--transition-speed) ease;
    }

    .social-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .social-btn.google i {
        color: #DB4437;
    }

    .social-btn.facebook i {
        color: #4267B2;
    }

    .login-link {
        text-align: center;
        margin-top: 15px; /* Reduced from 20px */
        color: var(--text-secondary);
    }

    .login-link a {
        color: var(--primary-teal);
        text-decoration: none;
        font-weight: 600;
    }

    .login-link a:hover {
        color: var(--dark-teal);
        text-decoration: underline;
    }

    /* Features Highlight */
    .features-highlight {
        display: flex;
        justify-content: space-around;
        margin-top: 25px; /* Reduced from 30px */
    }

    .feature {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 8px; /* Reduced from 10px */
    }

    .feature i {
        color: var(--primary-teal);
        font-size: 1.5rem;
    }

    .feature span {
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    /* Alerts */
    .alert {
        padding: 12px 15px; /* Reduced from 15px to 12px 15px */
        border-radius: 10px;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .alert-danger {
        background-color: rgba(231, 76, 60, 0.1);
        color: var(--error);
        border-left: 4px solid var(--error);
    }

    /* Responsive */
    @media screen and (max-width: 768px) {
        .login-container {
            max-width: 95%;
            padding: 0 10px;
        }
    }

    @media screen and (max-width: 600px) {
        .login-header, .login-form {
            padding: 20px;
        }

        .login-card {
            margin-top: 0;
            border-radius: 0;
        }

        .login-container {
            padding: 0;
        }

        .login-header h1 {
            font-size: 1.8rem;
        }
        
        .form-agreement {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }
        
        .social-login {
            flex-direction: column;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Password Toggle
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');
        
        togglePassword.addEventListener('click', function() {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            this.querySelector('i').classList.toggle('fa-eye');
            this.querySelector('i').classList.toggle('fa-eye-slash');
            
            // Change aria-label for accessibility
            this.setAttribute(
                'aria-label', 
                type === 'password' ? 'Show password' : 'Hide password'
            );
        });

        // Form Validation
        const loginForm = document.getElementById('loginForm');
        const usernameInput = document.getElementById('username');
        const usernameError = document.getElementById('username-error');
        const passwordError = document.getElementById('password-error');
        
        const validateForm = () => {
            let isValid = true;
            
            // Reset error messages
            usernameError.textContent = '';
            passwordError.textContent = '';
            
            // Validate username
            if (!usernameInput.value.trim()) {
                usernameError.textContent = 'Username is required';
                isValid = false;
            } else if (usernameInput.value.trim().length < 3) {
                usernameError.textContent = 'Username must be at least 3 characters';
                isValid = false;
            }
            
            // Validate password
            if (!passwordInput.value) {
                passwordError.textContent = 'Password is required';
                isValid = false;
            } else if (passwordInput.value.length < 6) {
                passwordError.textContent = 'Password must be at least 6 characters';
                isValid = false;
            }
            
            return isValid;
        };
        
        // Handle form submission
        loginForm.addEventListener('submit', (e) => {
            if (!validateForm()) {
                e.preventDefault();
            }
        });
        
        // Real-time validation feedback
        usernameInput.addEventListener('input', () => {
            if (usernameInput.value.trim().length >= 3) {
                usernameError.textContent = '';
            }
        });
        
        passwordInput.addEventListener('input', () => {
            if (passwordInput.value.length >= 6) {
                passwordError.textContent = '';
            }
        });
    });
</script>