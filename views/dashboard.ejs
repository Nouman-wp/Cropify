<% layout("/layouts/boilerplate") %>

<style>
    :root {
        --primary: #38b000;
        --primary-dark: #2d9300;
        --primary-light: #70e000;
        --secondary: #20b2aa;
        --light-bg: #f8f9fa;
        --card-bg: #ffffff;
        --text-dark: #2c3e50;
        --text-muted: #6c757d;
        --success: #00b894;
        --warning: #fdcb6e;
        --danger: #e74c3c;
        --border-radius: 12px;
        --shadow-sm: 0 4px 6px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 6px 12px rgba(0, 0, 0, 0.08);
        --shadow-lg: 0 15px 25px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
    }

    body {
        background-color: var(--light-bg);
        font-family: 'Poppins', sans-serif;
        color: var(--text-dark);
        overflow-x: hidden;
    }

    .dashboard-container {
        padding: 100px 30px 50px 30px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .welcome-section {
        position: relative;
        background: linear-gradient(135deg, var(--secondary), var(--primary));
        border-radius: var(--border-radius);
        padding: 40px;
        margin-bottom: 30px;
        color: white;
        overflow: hidden;
        box-shadow: var(--shadow-md);
    }

    .welcome-section::before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        width: 250px;
        height: 100%;
        background-image: url('/img/pattern.svg');
        background-size: cover;
        background-position: center;
        opacity: 0.2;
    }

    .welcome-text {
        max-width: 70%;
        position: relative;
        z-index: 2;
    }

    .welcome-header {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 15px;
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease, transform 0.5s ease;
    }

    .welcome-subheader {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 25px;
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease 0.1s, transform 0.5s ease 0.1s;
    }

    .welcome-actions {
        display: flex;
        gap: 15px;
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease 0.2s, transform 0.5s ease 0.2s;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 25px;
    }

    .grid-item-4 {
        grid-column: span 4;
    }

    .grid-item-8 {
        grid-column: span 8;
    }

    .grid-item-6 {
        grid-column: span 6;
    }

    .grid-item-12 {
        grid-column: span 12;
    }

    .card {
        background-color: var(--card-bg);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-sm);
        padding: 25px;
        height: 100%;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .card:hover {
        box-shadow: var(--shadow-md);
        transform: translateY(-5px);
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .card-title i {
        color: var(--primary);
    }

    .stat-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 20px;
    }

    .stat-card {
        background-color: white;
        border-radius: var(--border-radius);
        padding: 20px;
        box-shadow: var(--shadow-sm);
        transition: var(--transition);
        text-align: center;
        border-top: 4px solid var(--primary);
        position: relative;
        overflow: hidden;
    }

    .stat-card:nth-child(2) {
        border-top-color: #3498db;
    }

    .stat-card:nth-child(3) {
        border-top-color: #f39c12;
    }

    .stat-card::after {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        width: 80px;
        height: 80px;
        background-color: currentColor;
        opacity: 0.05;
        border-radius: 0 0 0 100%;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-md);
    }

    .stat-icon {
        font-size: 1.8rem;
        color: var(--primary);
        margin-bottom: 15px;
    }

    .stat-card:nth-child(2) .stat-icon {
        color: #3498db;
    }

    .stat-card:nth-child(3) .stat-icon {
        color: #f39c12;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 5px;
        color: var(--text-dark);
    }

    .stat-label {
        font-size: 0.9rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .profile-section {
        display: flex;
        flex-direction: column;
    }

    .profile-header {
        display: flex;
        gap: 20px;
        margin-bottom: 25px;
        align-items: center;
    }

    .profile-image-container {
        position: relative;
    }

    .profile-image {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid white;
        box-shadow: var(--shadow-sm);
    }

    .edit-profile-button {
        position: absolute;
        bottom: 0;
        right: 0;
        background-color: var(--primary);
        color: white;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: var(--transition);
    }

    .edit-profile-button:hover {
        background-color: var(--primary-dark);
        transform: scale(1.1);
    }

    .profile-details {
        flex: 1;
    }

    .profile-name {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .profile-role {
        display: inline-block;
        padding: 5px 10px;
        background-color: rgba(56, 176, 0, 0.1);
        color: var(--primary);
        border-radius: 20px;
        font-size: 0.8rem;
        margin-bottom: 10px;
    }

    .profile-info-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .profile-info-item {
        display: flex;
        margin-bottom: 15px;
        align-items: center;
    }

    .profile-info-label {
        font-weight: 600;
        width: 100px;
        color: var(--text-muted);
    }

    .profile-info-value {
        flex: 1;
    }

    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 12px 25px;
        border-radius: var(--border-radius);
        font-weight: 500;
        text-decoration: none;
        transition: var(--transition);
        gap: 10px;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: var(--primary);
        color: white;
    }

    .btn-primary:hover {
        background-color: var(--primary-dark);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(56, 176, 0, 0.2);
    }

    .btn-secondary {
        background-color: white;
        color: var(--text-dark);
        border: 1px solid rgba(0,0,0,0.1);
    }

    .btn-secondary:hover {
        background-color: #f8f9fa;
        transform: translateY(-3px);
        box-shadow: var(--shadow-sm);
    }

    .btn-outline {
        background-color: transparent;
        color: white;
        border: 1px solid rgba(255,255,255,0.5);
    }

    .btn-outline:hover {
        background-color: rgba(255,255,255,0.1);
    }

    .btn-icon {
        padding: 12px;
        border-radius: 50%;
    }

    .chart-container {
        width: 100%;
        height: 300px;
        margin-top: 15px;
        position: relative;
    }

    .chart-placeholder {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(248, 249, 250, 0.7);
        border-radius: 8px;
        color: var(--text-muted);
    }

    .market-trends-container {
        margin-top: 15px;
        max-height: 350px;
        overflow-y: auto;
    }

    .market-item {
        display: flex;
        align-items: center;
        padding: 15px;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        gap: 15px;
    }

    .market-item:last-child {
        border-bottom: none;
    }

    .market-item-image {
        width: 60px;
        height: 60px;
        border-radius: 10px;
        object-fit: cover;
    }

    .market-item-details {
        flex: 1;
    }

    .market-item-name {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .market-item-price {
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .market-item-change {
        font-weight: 600;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
    }

    .change-up {
        background-color: rgba(46, 213, 115, 0.1);
        color: #2ed573;
    }

    .change-down {
        background-color: rgba(255, 71, 87, 0.1);
        color: #ff4757;
    }

    .task-list {
        margin-top: 15px;
    }

    .task-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }

    .task-item:last-child {
        border-bottom: none;
    }

    .task-checkbox {
        width: 22px;
        height: 22px;
        border-radius: 50%;
        border: 2px solid #ddd;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: var(--transition);
    }

    .task-checkbox.completed {
        background-color: var(--primary);
        border-color: var(--primary);
    }

    .task-checkbox.completed i {
        color: white;
        font-size: 0.7rem;
    }

    .task-details {
        flex: 1;
    }

    .task-title {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .task-title.completed {
        text-decoration: line-through;
        color: var(--text-muted);
    }

    .task-date {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .weather-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 20px;
    }

    .weather-icon {
        font-size: 4rem;
        margin-bottom: 15px;
        color: #f1c40f;
    }

    .weather-temp {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .weather-desc {
        color: var(--text-muted);
        margin-bottom: 15px;
    }

    .weather-details {
        display: flex;
        width: 100%;
        justify-content: space-around;
        margin-top: 20px;
    }

    .weather-detail {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .weather-detail-value {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .weather-detail-label {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .badge {
        display: inline-block;
        padding: 3px 10px;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .badge-primary {
        background-color: rgba(56, 176, 0, 0.1);
        color: var(--primary);
    }

    .notification-list {
        margin-top: 15px;
        max-height: 300px;
        overflow-y: auto;
    }

    .notification-item {
        display: flex;
        gap: 15px;
        padding: 15px;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        transition: var(--transition);
    }

    .notification-item:hover {
        background-color: rgba(0,0,0,0.01);
    }

    .notification-item:last-child {
        border-bottom: none;
    }

    .notification-icon {
        min-width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: rgba(56, 176, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary);
    }

    .notification-details {
        flex: 1;
    }

    .notification-message {
        margin-bottom: 5px;
    }

    .notification-time {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .recent-transactions {
        margin-top: 15px;
    }

    .transaction-item {
        display: flex;
        align-items: center;
        padding: 15px;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        gap: 15px;
    }

    .transaction-item:last-child {
        border-bottom: none;
    }

    .transaction-icon {
        min-width: 45px;
        height: 45px;
        border-radius: var(--border-radius);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .transaction-icon.sale {
        background-color: #38b000;
    }

    .transaction-icon.purchase {
        background-color: #3498db;
    }

    .transaction-details {
        flex: 1;
    }

    .transaction-title {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .transaction-date {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .transaction-amount {
        font-weight: 600;
    }

    .transaction-amount.sale {
        color: #38b000;
    }

    .transaction-amount.purchase {
        color: #3498db;
    }

    .progress-container {
        height: 6px;
        background-color: #e9ecef;
        border-radius: 10px;
        margin-top: 10px;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        border-radius: 10px;
        background-color: var(--primary);
    }

    .social-links {
        display: flex;
        gap: 10px;
        margin-top: 10px;
    }

    .social-link {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        transition: var(--transition);
    }

    .social-link:hover {
        transform: translateY(-5px);
    }

    .social-link.facebook {
        background-color: #3b5998;
    }

    .social-link.twitter {
        background-color: #1da1f2;
    }

    .social-link.instagram {
        background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
    }

    .toggle-switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 24px;
    }

    .toggle-switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .toggle-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
    }

    .toggle-slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        transition: .4s;
        border-radius: 50%;
    }

    input:checked + .toggle-slider {
        background-color: var(--primary);
    }

    input:checked + .toggle-slider:before {
        transform: translateX(26px);
    }

    .insight-badge {
        display: inline-block;
        padding: 3px 10px;
        border-radius: 15px;
        font-size: 0.8rem;
        margin-left: 10px;
        background-color: rgba(255, 193, 7, 0.1);
        color: #ffc107;
    }

    @keyframes skeleton-loading {
        0% {
            background-position: -200px 0;
        }
        100% {
            background-position: calc(200px + 100%) 0;
        }
    }

    .skeleton {
        background: linear-gradient(90deg, rgba(0, 0, 0, 0.06) 25%, rgba(0, 0, 0, 0.12) 37%, rgba(0, 0, 0, 0.06) 63%);
        background-size: 400% 100%;
        animation: skeleton-loading 1.4s ease infinite;
        border-radius: 4px;
        height: 16px;
        margin-bottom: 8px;
    }

    @media (max-width: 1200px) {
        .grid-item-4, .grid-item-8 {
            grid-column: span 6;
        }
    }

    @media (max-width: 992px) {
        .grid-item-4, .grid-item-6, .grid-item-8 {
            grid-column: span 12;
        }

        .welcome-section::before {
            display: none;
        }

        .welcome-text {
            max-width: 100%;
        }
    }

    @media (max-width: 768px) {
        .dashboard-container {
            padding: 90px 15px 30px 15px;
        }

        .welcome-header {
            font-size: 2rem;
        }

        .welcome-section {
            padding: 30px;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .welcome-actions {
            flex-direction: column;
        }

        .profile-header {
            flex-direction: column;
            text-align: center;
        }

        .profile-details {
            width: 100%;
        }

        .action-buttons {
            flex-direction: column;
        }
    }
</style>

<div class="dashboard-container">
    <div class="welcome-section">
        <div class="welcome-text">
            <div class="welcome-header">Welcome back, <%= typeof currentUser !== 'undefined' && currentUser.username ? currentUser.username : 'User' %> 👋</div>
            <div class="welcome-subheader">
                <% if (typeof currentUser !== 'undefined' && currentUser.role) { %>
                    <% if (currentUser.role === 'farmer') { %>
                        Your marketplace dashboard - manage your crops, track sales, and connect with buyers.
                    <% } else if (currentUser.role === 'buyer') { %>
                        Your marketplace dashboard - find fresh produce, track orders, and connect with farmers.
                    <% } else { %>
                        Your marketplace dashboard - monitor activity and manage the platform.
                    <% } %>
                <% } else { %>
                    Your marketplace dashboard - explore and manage your activities.
                <% } %>
            </div>
            <div class="welcome-actions">
                <% if (typeof currentUser !== 'undefined' && currentUser.role) { %>
                    <% if (currentUser.role === 'farmer') { %>
                        <a href="/sell" class="btn btn-primary"><i class="fas fa-plus-circle"></i> List New Crop</a>
                    <% } else if (currentUser.role === 'buyer') { %>
                        <a href="/buy" class="btn btn-primary"><i class="fas fa-shopping-basket"></i> Browse Crops</a>
                    <% } %>
                <% } %>
                <a href="/analytics" class="btn btn-outline"><i class="fas fa-chart-line"></i> View Analytics</a>
            </div>
        </div>
    </div>

    <div class="grid-container">
        <!-- Main Stats Section -->
        <div class="grid-item-12">
            <div class="stat-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-seedling"></i>
                    </div>
                    <div class="stat-number">
                        <% if (typeof currentUser !== 'undefined' && currentUser.role === 'farmer') { %>
                            5
                        <% } else { %>
                            12
                        <% } %>
                    </div>
                    <div class="stat-label">
                        <% if (typeof currentUser !== 'undefined' && currentUser.role === 'farmer') { %>
                            Crops Listed
                        <% } else { %>
                            Items Purchased
                        <% } %>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                    <div class="stat-number">
                        <% if (typeof currentUser !== 'undefined' && currentUser.role === 'farmer') { %>
                            24
                        <% } else { %>
                            8
                        <% } %>
                    </div>
                    <div class="stat-label">
                        <% if (typeof currentUser !== 'undefined' && currentUser.role === 'farmer') { %>
                            Successful Sales
                        <% } else { %>
                            Active Orders
                        <% } %>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-rupee-sign"></i>
                    </div>
                    <div class="stat-number">₹15,000</div>
                    <div class="stat-label">
                        <% if (typeof currentUser !== 'undefined' && currentUser.role === 'farmer') { %>
                            Total Earnings
                        <% } else { %>
                            Total Spent
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid-item-4">
            <div class="card profile-section">
                <div class="profile-header">
                    <div class="profile-image-container">
                        <img src="<%= typeof currentUser !== 'undefined' && currentUser.profileImage ? currentUser.profileImage : '/img/default-profile.png' %>" alt="Profile" class="profile-image" onerror="this.src='/img/default-profile.png'">
                        <a href="/profile" class="edit-profile-button">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                    </div>
                    <div class="profile-details">
                        <div class="profile-name"><%= typeof currentUser !== 'undefined' && currentUser.username ? currentUser.username : 'User' %></div>
                        <% if (typeof currentUser !== 'undefined' && currentUser.role) { %>
                            <div class="profile-role"><%= currentUser.role.charAt(0).toUpperCase() + currentUser.role.slice(1) %></div>
                        <% } %>
                        
                        <div class="social-links">
                            <% if (typeof currentUser !== 'undefined' && currentUser.socialLinks) { %>
                                <% if (currentUser.socialLinks.facebook) { %>
                                    <a href="<%= currentUser.socialLinks.facebook %>" class="social-link facebook" target="_blank">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                <% } %>
                                <% if (currentUser.socialLinks.twitter) { %>
                                    <a href="<%= currentUser.socialLinks.twitter %>" class="social-link twitter" target="_blank">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                <% } %>
                                <% if (currentUser.socialLinks.instagram) { %>
                                    <a href="<%= currentUser.socialLinks.instagram %>" class="social-link instagram" target="_blank">
                                        <i class="fab fa-instagram"></i>
                                    </a>
                                <% } %>
                                <% if (!currentUser.socialLinks.facebook && !currentUser.socialLinks.twitter && !currentUser.socialLinks.instagram) { %>
                                    <a href="/profile" class="btn btn-secondary btn-icon">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                <% } %>
                            <% } else { %>
                                <a href="/profile" class="btn btn-secondary btn-icon">
                                    <i class="fas fa-plus"></i>
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="profile-info">
                    <ul class="profile-info-list">
                        <li class="profile-info-item">
                            <div class="profile-info-label">Email</div>
