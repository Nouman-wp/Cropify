<script>

    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(() => {
            document.querySelector('.welcome-header').style.opacity = '1';
            document.querySelector('.welcome-header').style.transform = 'translateY(0)';
            
            setTimeout(() => {
                document.querySelector('.welcome-subheader').style.opacity = '1';
                document.querySelector('.welcome-subheader').style.transform = 'translateY(0)';
                
                setTimeout(() => {
                    document.querySelector('.welcome-actions').style.opacity = '1';
                    document.querySelector('.welcome-actions').style.transform = 'translateY(0)';
                }, 100);
            }, 100);
        }, 300);
        

        const taskCheckboxes = document.querySelectorAll('.task-checkbox:not(.completed)');
        taskCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('click', function() {
                this.classList.toggle('completed');
                if (this.classList.contains('completed')) {
                    this.innerHTML = '<i class="fas fa-check"></i>';
                    this.closest('.task-item').querySelector('.task-title').classList.add('completed');
                } else {
                    this.innerHTML = '';
                    this.closest('.task-item').querySelector('.task-title').classList.remove('completed');
                }
            });
        });
        

        const ctx = document.getElementById('activityChart').getContext('2d');
        const activityChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Performance',
                    data: [12, 19, 15, 17, 21, 25],
                    backgroundColor: 'rgba(56, 176, 0, 0.2)',
                    borderColor: 'rgba(56, 176, 0, 1)',
                    borderWidth: 2,
                    tension: 0.4,
                    pointBackgroundColor: 'white',
                    pointBorderColor: 'rgba(56, 176, 0, 1)',
                    pointBorderWidth: 2,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    });
</script>